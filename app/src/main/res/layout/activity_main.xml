<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCrearAlumno"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="sans-serif"
        android:onClick="pulsacionBtnNuevoAlumno"
        android:text="@string/btnCrearAlumno"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/btnConsultarAlumno"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="sans-serif"
        android:onClick="pulsacionConsultarAlumno"
        android:text="@string/btnConsultarAlumno"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <Button
        android:id="@+id/btnVerTodosAlumno"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="sans-serif"
        android:onClick="pulsacionBtnverTodosAlumnos"
        android:text="@string/btnVerTodosAlumnos"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

</androidx.constraintlayout.widget.ConstraintLayout>